datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Message {
  id        String   @id @default(uuid())
  creatorName String
  destinataryName String
  content   String
  imageUrl  String?
  email String @default("example@example.com")
  spotifyLink  String?
  dateInit  DateTime? // Data inicial do relacionamento
  interactiveMessage Boolean @default(true)
  createdAt DateTime @default(now())
  expiresAt DateTime
}

model Payment {
  id                String   @id @default(cuid())
  status            String   // pending, approved, rejected, etc.
  paymentMethod   String?  // Ex: pix, credit_card, boleto
  value             Decimal
  approvedAt        DateTime? // data da aprovação
  createdAt          DateTime  @default(now())
  expiresAt DateTime?
  payerName       String?
  payerEmail      String?
  mpPaymentId       String?  // ID do pagamento no Mercado Pago
}

