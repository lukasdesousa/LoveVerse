datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String    @id @default(uuid())
  name      String
  email     String    @unique
  password  String
  email_verified Boolean @default(false)
  messages  Message[] @relation("UserMessages") // Um usuário pode ter várias mensagens
  createdAt DateTime @default(now())
}

model EmailVerification {
  email       String   @id
  code        String
  expiresAt   DateTime
}

model PassWordRecovery {
  email String   @id
  token        String
  expiresAt   DateTime
}

model Message {
  id        String   @id @default(uuid())
  creatorName String
  destinataryName String
  content   String
  imageUrl  String?
  spotifyLink  String?
  dateInit  DateTime? // Data inicial do relacionamento
  interactiveMessage Boolean @default(true)
  createdAt DateTime @default(now())
  expiresAt DateTime
  userId    String
  user      User     @relation(fields: [userId], references: [id], name: "UserMessages") // Relacionamento com User
}

